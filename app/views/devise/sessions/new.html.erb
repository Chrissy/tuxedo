<div class="teaser-bg" style="background: url(<%= Recipe.find_by_name("Test Pilot").image %>)"></div>
<div class="user-form">
  <h2>Sign in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.email_field :email, autofocus: true, placeholder: "email", class: "textfield" %>
    <%= f.password_field :password, autocomplete: "off", placeholder: "password", class: "textfield" %>

    <%# if devise_mapping.rememberable? -%>
      <%#= f.check_box :remember_me %> <%#= f.label :remember_me %>
    <%# end -%>

    <div><%= f.submit "Sign in" %></div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
